// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  phone    String   @unique
  hireData DateTime
  position String
  tasks    Tasks[]
}

model Tasks {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  dueDate     DateTime
  employee    Employee @relation(fields: [employeeId], references: [id])
  employeeId  Int
}
